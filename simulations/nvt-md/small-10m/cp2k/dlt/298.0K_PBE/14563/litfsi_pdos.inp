&FORCE_EVAL
  METHOD        QUICKSTEP
  STRESS_TENSOR        ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME        BASIS_MOLOPT
    CHARGE        0
    MULTIPLICITY        1
    POTENTIAL_FILE_NAME        GTH_POTENTIALS
    &MGRID
      CUTOFF      600
      NGRIDS      4
      REL_CUTOFF      60
    &END MGRID
    &QS
      EPS_DEFAULT       1e-08
      EXTRAPOLATION       ASPC
      METHOD       GPW
    &END QS
    &POISSON
      PERIODIC       XYZ
      &EWALD
      &END EWALD
    &END POISSON
    &PRINT
      &E_DENSITY_CUBE       OFF
      &END E_DENSITY_CUBE
      &PDOS
        FILENAME pdos_litfsi
        NLUMO 100
      &END PDOS
    &END PRINT
    &SCF
      EPS_SCF       1e-06
      MAX_SCF       30
      SCF_GUESS       ATOMIC
      &OT       .TRUE.
        MINIMIZER       DIIS
        PRECONDITIONER       FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF       .TRUE.
        EPS_SCF       1e-06
        MAX_SCF       10
      &END OUTER_SCF
      &PRINT
        DM_RESTART_WRITE       .TRUE.
        &RESTART       OFF
      &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL       PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE       PAIR_POTENTIAL
        &PAIR_POTENTIAL
          PARAMETER_FILE_NAME       dftd3.dat
          REFERENCE_FUNCTIONAL       PBE
          R_CUTOFF       8
          TYPE       DFTD3
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_GRID
      &END XC_GRID
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC       LENGTH LENGTH LENGTH
      ALPHA_BETA_GAMMA       90.0 90.0 90.0
    &END CELL
    &COORD
      @INCLUDE       litfsi.xyz
    &END COORD
    &KIND      C
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      F
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      H
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      Li
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      N
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      O
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &KIND      S
      BASIS_SET       DZVP-MOLOPT-SR-GTH
      POTENTIAL       GTH-PBE
    &END KIND
    &TOPOLOGY
      &MOL_SET
      &END MOL_SET
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  RUN_TYPE     ENERGY
  PROJECT      litfsi
  PRINT_LEVEL  MEDIUM
&END GLOBAL

